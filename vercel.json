{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npm run build"
      }
    }
  ],
  "env": {
    "HELIUS_API_KEY": "@helius_api_key",
    "NEXT_PUBLIC_PROGRAM_ID": "@program_id"
  },
  "github": {
    "silent": true
  }
} 